using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class ButtonController : MonoBehaviour
{
    public SphereMove sphereMover;

    public void OnClick()
    {
        sphereMover.CreateSphere();
    }

    public void OnPressed()
    {
        sphereMover.MoveLeft();
    }

    public void Released()
    {
        sphereMover.MoveRight();
    }
    public void MoveUp()
    {
        sphereMover.MoveUp();
    }
    public void MoveDown()
    {
        sphereMover.MoveDown();
    }
    public void ZoomIn()
    {
        sphereMover.ZoomIn();
    }
    public void ZoomOut()
    {
        sphereMover.ZoomOut();
    }

    public void TouchBegin()
    {
        Debug.Log("Let the touch begin");
    }

    public void TouchEnd()
    {
        Debug.Log("Touch end");
    }
}
